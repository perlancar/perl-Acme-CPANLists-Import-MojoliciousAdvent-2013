use utf8;

sub neko {
    return {
        &#39;site&#39; =&gt; {
            &#39;maintenance&#39; =&gt; 1,
            &#39;copyright&#39; =&gt; &#39;Copyright (C) äº¬é½å¸å½¹æãã³èª²&#39;,
            &#39;ja&#39; =&gt; {
                &#39;name&#39; =&gt; &#39;ãã³ç®¡çã·ã¹ãã &#39;,
            },
            &#39;en&#39; =&gt; {
                &#39;name&#39; =&gt; &#39;Stray Cats Administration System&#39;,
            },
        }
    };
}

sub auth {
    return {
        &#39;database&#39; =&gt; {
            &#39;dbtype&#39; =&gt; &#39;PostgreSQL&#39;,
            &#39;dbname&#39; =&gt; &#39;nekochan&#39;,
            &#39;hostname&#39; =&gt; &#39;192.0.2.22&#39;,
            &#39;port&#39; =&gt; 5432,
            &#39;username&#39; =&gt; &#39;dbadmin&#39;,
